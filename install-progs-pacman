#!/bin/bash
set -euo pipefail

[ "$EUID" -ne 0 ] && { echo "Pacman must be run this as root"; exit 1; }

# was using the git version of zathura but forgot why

browsers=(
    firefox chromium qutebrowser
)
plumbing=(
    wget curl aria2 fd fzf debugedit picom libspeechd network-manager-applet numlockx dunst redshift dmenu xdotool xclip
)
programming=(
    git imagemagick alacritty htop shellcheck
)
rice=(
    polybar tmux byobu i3 sxhkd bspwm
)
editing=(
    vim helix texlive texlive-lang zathura zathura-ps zathura-djvu zathura-pdf-mupdf
)
media=(
    yt-dlp pamixer sxiv mpv xwallpaper maim
)
fonts=(
    ttf-jetbrains-mono ttf-jetbrains-mono-nerd
)

pacman -Syu --noconfirm --needed
pacman -S --noconfirm --needed     \
    "${browsers[@]}"      \
    "${editing[@]}"       \
    "${media[@]}"         \
    "${plumbing[@]}"   \
    "${programming[@]}"   \
    "${rice[@]}"          \
    "${fonts[@]}"         \


